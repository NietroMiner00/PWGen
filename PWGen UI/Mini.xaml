<Window x:Class="PWGen.Mini"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PWGen"
        mc:Ignorable="d"
        Title="Mini" Height="55" Width="250" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Grid>
        <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="copy" Content="Kopieren" HorizontalAlignment="Right" Margin="0,24,10,0" VerticalAlignment="Top" Width="100" Click="copy_Click"/>
        <Button x:Name="close" Content="X" HorizontalAlignment="Right" Margin="0,5,10,0" VerticalAlignment="Top" Width="10" Height="10" RenderTransformOrigin="3.5,-1.1" FontSize="6" Click="close_Click" />
        <Button x:Name="max" Content="O" HorizontalAlignment="Right" Margin="0,5,25,0" VerticalAlignment="Top" Width="10" Height="10" RenderTransformOrigin="3.5,-1.1" FontSize="6" Click="max_Click" />

    </Grid>
</Window>
